<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<CheckBoxPreference
    android:defaultValue="true"
    android:key="enable_sound"
    android:title="Enable Sound"
    android:summaryOff="Sound disabled"
    android:summaryOn="Sound enabled"/>
    <ListPreference
        android:title="Timer Sound"
        android:key="timer_sound"
        android:defaultValue="gong"
        android:entries="@array/timer_sound_labels"
        android:entryValues="@array/timer_sound_values"/>
    <EditTextPreference
        android:title="Default Interval"
        android:key="default_interval"
        android:defaultValue="30"/>
</PreferenceScreen>